<article class="card mt-3">
  <section class="card-header">
    <%= question.user.gravatar %>
    <%= question.user.name_or_email %>
  </section>
  <div class="card-body">
    <h3><%= link_to question.title, question_path(question)%></h3>

    <section class="card-text">

      <time datetime="<%= question.formatted_created_at%>">
        <small><%= question.formatted_created_at %></small>
      </time>

      <div class = 'my-2'>
        <%= render question.tags %>
      </div>

      <p class="my-2"><i>
        <%= strip_tags question.body %>
      </i></p>

    </section>
    <%= link_to t('helpers.button.show'), question_path(question), class: 'btn btn-primary' %>

    <% if policy(question).edit? %>
      <%= link_to t('helpers.button.edit'), edit_question_path(question), class: 'btn btn-secondary' %>
    <% end %>

    <% if policy(question).destroy? %>
      <%= link_to t('helpers.button.destroy'), question_path(question), data: {method: :delete, confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
    <% end %>
  </div>
</article>