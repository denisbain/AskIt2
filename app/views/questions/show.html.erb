<h1 class="mb-4"><%= @question.title %></h1>

<p class="lead my-3">
  <%= @question.body %>
</p>

<time datetime="<%= @question.formatted_created_at%>">
  <small><%= @question.formatted_created_at %></small>
</time>

<%= link_to "Show", question_path(@question), class: 'btn btn-primary' %>
<%= link_to "Edit", edit_question_path(@question), class: 'btn btn-secondary' %>
<%= link_to "Destroy", question_path(@question), data: {method: :delete, confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
<hr class="my-3">


<h2>Write your answer</h2>

<%= render 'answers/form' %>

<h2 class="mt-5">Answers</h2>
<% @answers.each do |answer| %>
  <article class="mb-3">
    <time datetime="<%= answer.formatted_created_at%>">
    <small><%= answer.formatted_created_at %></small>
    </time>

    <p>
      <%= answer.body %>
    </p>

    <%= link_to "Edit", edit_question_answer_path(@question, answer), class: 'btn btn-info btn-sm' %>
    <%= link_to "Destroy", question_answer_path(@question, answer), data: {method: :delete, confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' %>
  </article>
<% end %>