<%= link_to "##{html_id}", class: "btn btn-primary", data: {"bs-toggle": 'collapse'} do %>
<%= t('questions.show.comments') %>
<% end %>

<%= tag.div class: 'collapse', id: html_id do %>
  <%= form_with model: [commentable, (@comment || commentable.comments.build)], class: 'pt-3 border-top my-2' do |f| %>
    <%= render 'shared/errors', object: @comment %>

    <div>
      <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
          <%= f.label :body %>
        </div>

        <div class="col-sm-10">
          <%= f.text_area :body, class: 'form-control' %>
        </div>
      </div>

      <%= f.submit t('helpers.submit.create', model: t('activerecord.models.question')), class: 'btn btn-primary' %>
  <% end %>
  <%= render commentable.comments.decorate %>
<% end %>


